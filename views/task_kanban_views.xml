<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kanban View -->
    <record id="view_task_management_kanban" model="ir.ui.view">
        <field name="name">task.management.kanban</field>
        <field name="model">task.management</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column" on_create="quick_create" quick_create_view="task_management.view_task_management_form_quick_create">
                <field name="id"/>
                <field name="stage_id" options='{"group_by_tooltip": {"description": "Description"}}'/>
                <field name="color"/>
                <field name="priority"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="kanban_state"/>
                <field name="is_closed"/>
                <field name="active"/>
                <field name="tag_ids"/>
                <field name="date_deadline"/>
                <field name="displayed_image_id"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <progressbar field="kanban_state" colors='{"done": "success", "blocked": "danger", "normal": "muted"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{kanban_color(record.color.raw_value)}">
                            <div class="oe_kanban_content">
                                <!-- Cover Image -->
                                <div class="o_kanban_cover_image" t-if="record.displayed_image_id.raw_value">
                                    <img t-attf-src="/web/image/ir.attachment/{{record.displayed_image_id.raw_value}}/datas" alt="Cover Image"/>
                                </div>

                                <!-- Card Body -->
                                <div class="o_kanban_card_content">
                                    <!-- Top Section -->
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle" t-if="record.partner_id.value">
                                                <field name="partner_id"/>
                                            </div>
                                        </div>
                                        
                                        <!-- Dropdown Menu with Inline Color Picker -->
                                        <div class="o_dropdown_kanban dropdown">
                                            <a class="dropdown-toggle o-no-caret btn" href="#" role="button" data-bs-toggle="dropdown" data-bs-display="static" aria-label="Dropdown menu" title="Dropdown menu">
                                                <span class="fa fa-ellipsis-v"/>
                                            </a>
                                            <div class="dropdown-menu" role="menu">
                                                <a role="menuitem" type="object" name="action_set_cover_image" class="dropdown-item">Set Cover Image</a>
                                                <a role="menuitem" type="object" name="action_share_task" class="dropdown-item">Share Task</a>
                                                <a role="menuitem" type="object" name="action_duplicate_task" class="dropdown-item">Duplicate</a>
                                                <div role="separator" class="dropdown-divider"/>
                                                <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                                <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                                <div role="separator" class="dropdown-divider"/>
                                                <div class="dropdown-item-text">
                                                    <span class="text-muted" style="font-size: 11px;">Colors:</span>
                                                </div>
                                                <ul class="oe_kanban_colorpicker" data-field="color" style="padding: 8px 12px; margin: 0; list-style: none; display: flex; flex-wrap: wrap; gap: 4px; max-width: 180px;">
                                                    <li style="width: 20px; height: 20px; background-color: #FFFFFF; border: 1px solid #ccc; cursor: pointer; border-radius: 2px;" data-color="0"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #F06050; cursor: pointer; border-radius: 2px;" data-color="1"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #F4A460; cursor: pointer; border-radius: 2px;" data-color="2"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #F7CD1F; cursor: pointer; border-radius: 2px;" data-color="3"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #6CC1ED; cursor: pointer; border-radius: 2px;" data-color="4"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #814968; cursor: pointer; border-radius: 2px;" data-color="5"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #EB7E7F; cursor: pointer; border-radius: 2px;" data-color="6"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #2C8397; cursor: pointer; border-radius: 2px;" data-color="7"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #475577; cursor: pointer; border-radius: 2px;" data-color="8"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #D6145F; cursor: pointer; border-radius: 2px;" data-color="9"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #30C381; cursor: pointer; border-radius: 2px;" data-color="10"></li>
                                                    <li style="width: 20px; height: 20px; background-color: #9365B8; cursor: pointer; border-radius: 2px;" data-color="11"></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Tags -->
                                    <div class="o_kanban_record_body">
                                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>

                                    <!-- Bottom Section -->
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="priority" widget="priority"/>
                                            <field name="activity_ids" widget="kanban_activity"/>
                                            <t t-if="record.date_deadline.raw_value and ! record.is_closed.raw_value">
                                                <span t-attf-class="o_kanban_date #{record.date_deadline.raw_value &lt; (new Date()).toJSON().slice(0,10) ? 'text-danger' : ''}">
                                                    <i class="fa fa-clock-o"/>
                                                    <t t-esc="record.date_deadline.value"/>
                                                </span>
                                            </t>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="kanban_state" widget="state_selection"/>
                                            <field name="user_id" widget="many2one_avatar_user"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Quick Create Form -->
    <record id="view_task_management_form_quick_create" model="ir.ui.view">
        <field name="name">task.management.form.quick.create</field>
        <field name="model">task.management</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" placeholder="Task Title..."/>
                    <field name="user_id" widget="many2one_avatar_user"/>
                    <field name="date_deadline"/>
                </group>
            </form>
        </field>
    </record>
</odoo>